<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/item_padding">
    <TextView
        android:visibility="gone"
        android:paddingTop="15dp"
        android:id="@+id/tv_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/img_chat"
        android:textSize="@dimen/name_msg"
        android:text="this is a audio"
        android:textIsSelectable="true" />

    <ImageView
        android:visibility="visible"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="15dp"
        android:layout_toLeftOf="@+id/img_chat"
        android:textSize="@dimen/name_msg"
        android:textIsSelectable="true"
        android:src="@drawable/receive_sond"
        android:id="@+id/send_sound"/>

    <ImageView
        android:paddingTop="15dp"
        android:id="@+id/img_chat"
        android:layout_width="@dimen/img_avatar"
        android:layout_height="@dimen/img_avatar"
        android:layout_alignParentRight="true"
        android:src="@drawable/send" />

</RelativeLayout>